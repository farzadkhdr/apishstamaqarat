{
  "name": "request-system-api",
  "version": "2.1.0",
  "description": "API بۆ سیستەمی ناردنی داواکاری و بەڕێوەبردنی داواکاریەکان - داتا پارێزراوە لە JSON فایلەکان",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint server.js",
    "lint:fix": "eslint server.js --fix",
    "format": "prettier --write server.js",
    "backup": "node scripts/backup.js",
    "clean": "rm -rf node_modules && rm -f package-lock.json",
    "setup": "npm run clean && npm install",
    "deploy": "npm run lint && npm test && npm start",
    "stats": "node scripts/stats.js",
    "seed": "node scripts/seed.js",
    "reset": "node scripts/reset.js",
    "docs": "node scripts/generate-docs.js",
    "monitor": "node scripts/monitor.js"
  },
  "keywords": [
    "api",
    "request-system",
    "real-estate",
    "kurdish",
    "housing",
    "land",
    "advertisements",
    "property",
    "request-management",
    "json-database",
    "nodejs",
    "express"
  ],
  "author": {
    "name": "سیستەمی داواکاری",
    "email": "support@request-system.com",
    "url": "https://dawakrdn.vercel.app"
  },
  "contributors": [
    {
      "name": "تیمی گەشەپێدەران"
    }
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/request-system-api.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/request-system-api/issues",
    "email": "bugs@request-system.com"
  },
  "homepage": "https://request-system-api.vercel.app",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.1",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^3.0.11",
    "winston": "^3.10.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "prettier": "^3.0.2",
    "@faker-js/faker": "^8.0.2"
  },
  "optionalDependencies": {
    "sqlite3": "^5.1.6"
  },
  "files": [
    "server.js",
    "package.json",
    "README.md",
    "LICENSE",
    ".env.example",
    ".gitignore",
    "data/",
    "uploads/",
    "scripts/",
    "docs/"
  ],
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "port": 3001,
    "data_dir": "data",
    "upload_dir": "uploads",
    "backup_dir": "backups",
    "max_file_size": "5MB",
    "cors_origins": "https://dawakrdn.vercel.app,https://systamwargrtn.vercel.app"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "server.js",
      "scripts/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-console": "off",
      "import/no-extraneous-dependencies": "off",
      "camelcase": "off",
      "no-underscore-dangle": "off"
    },
    "env": {
      "node": true,
      "jest": true
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "printWidth": 100
  },
  "volta": {
    "node": "18.17.1",
    "npm": "9.6.7"
  },
  "funding": {
    "type": "individual",
    "url": "https://buymeacoffee.com/requestsystem"
  }
}